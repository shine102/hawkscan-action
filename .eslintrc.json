{
    "env": {
        "commonjs": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-control-regex": 0,
        "guard-for-in": "warn",
        "object-shorthand": "warn",
        "@typescript-eslint/no-var-requires": "off"
    }
}
